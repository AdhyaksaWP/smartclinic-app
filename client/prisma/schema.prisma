generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String   @id @default(uuid())
  fullName       String?  
  email          String   @unique
  password       String
  birthDate      DateTime? 
  patientNumber  String?   
  receiptsId     String?   
  timeStamp      DateTime? @default(now()) 
  sensorReadings SensorReadings[]
}

model SensorReadings {
  id             String   @id @default(uuid())
  height         Float
  weight         Float
  temperature    Float
  heartbeat      Float
  oxygenLevel    Float
  bloodPresuure  Float
  bmi            Float
  userId         String 
  user           User     @relation(fields: [userId], references: [id])
}

